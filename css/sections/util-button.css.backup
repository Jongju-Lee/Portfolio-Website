/* ----- util-btn 怨듯넻 ----- */
.util-btn {
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  position: fixed;
  width: var(--size-util-btn);
  height: var(--size-util-btn);
  border-radius: 50%;
  background-color: var(--color-util-btn);
  transition: 0.3s;
  cursor: pointer;
  z-index: 1000;
  box-shadow: var(--shadow-util-btn);
}
.util-btn:hover {
  transform: translateY(-4px);
}
.util-btn:active {
  transform: translateY(-4px) scale(0.9);
}
/* 媛??붿냼蹂?on ?곹깭 ?뺤쓽 */
.trigger--on,
.top-btn--on,
.sidebar-btn--on {
  opacity: 0.7;
  visibility: visible;
  pointer-events: all;
}

/* ----- ??ㅽ겕由??ㅻ퉬寃뚯씠??踰꾪듉(trigger) ----- */
.trigger {
  top: 0;
  left: var(--spacing-3xl);
}
.trigger.active {
  background-color: var(--color-primary);
  transform: translateY(-4px) rotate(135deg);
}
.trigger.active:active {
  transform: scale(0.9);
}
.trigger--on {
  top: var(--spacing-3xl);
}
.trigger img {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: calc(56px / 2.4);
  height: calc(56px / 2.4);
}

/* ----- 留??꾨줈 媛湲?踰꾪듉(top-btn) ----- */
.top-btn {
  bottom: 0;
  right: var(--spacing-3xl);
}
.top-btn--on {
  bottom: var(--spacing-3xl);
}
.top-btn img {
  position: absolute;
  top: calc(50% - 2px);
  left: 50%;
  transform: translate(-50%, -50%);
  width: calc(56px / 2.5);
  height: calc(32px / 2.5);
}

/* ----- ?ъ씠??諛?踰꾪듉(sidebar-btn) ----- */
.sidebar-btn {
  display: none;
  position: fixed;
  top: 8px;
  right: 10px;
  width: var(--size-util-btn);
  height: var(--size-util-btn);
  border-radius: 50%;
  z-index: 9999;
  transition: top 0.3s, right 0.3s, background-color 0.3s, transform 0.3s;
}
/* ?ㅽ겕濡??대젮媛????붿옄??蹂寃?*/
.sidebar-btn--on {
  opacity: 0.7;
  top: var(--spacing-xl);
  right: var(--spacing-xl);
  background-color: var(--color-util-btn);
}
.sidebar-btn--on:hover {
  transform: translateY(-4px);
}
/* ?ъ씠?쒕컮 ?대┫ ???꾩튂 ?섏젙 */
.sidebar-btn--active {
  top: var(--spacing-md);
  right: var(--spacing-md);
  /* right: 4px; */
}
/* lightbox?대┫ ???④? 泥섎━ */
.sidebar-btn--hide {
  display: none !important;
}
/* sidebar-btn__inner */
.sidebar-btn__inner {
  position: relative;
  display: inline-block;
  width: 28px;
  height: 22px;
  transition: transform 0.3s;
  transform-origin: center center;
}
/* ?ㅽ겕濡??대젮媛????붿옄??蹂寃?*/
.sidebar-btn--on .sidebar-btn__inner {
  transform: scale(0.9);
}
.sidebar-btn__inner span {
  position: absolute;
  left: 0;
  width: 100%;
  height: 4px;
  background-color: var(--text-color-light);
  border-radius: var(--spacing-xs);
  transition: top 0.5s, transform 0.5s, opacity 0.5s;
}
.sidebar-btn__inner span:nth-child(1) {
  top: 0;
}
.sidebar-btn__inner span:nth-child(2) {
  top: 50%;
  transform: translateY(-50%);
}
.sidebar-btn__inner span:nth-child(3) {
  top: 100%;
  transform: translateY(-100%);
}
/* ?ㅽ겕濡??대젮媛붿쓣 ??????蹂寃?*/
.sidebar-btn--on .sidebar-btn__inner span {
  background-color: var(--color-background-white);
}
/* ?ъ씠?쒕컮 ?대┫ ??????蹂寃?*/
.sidebar-btn--active .sidebar-btn__inner span {
  background-color: var(--color-foreground);
}
/* ?ъ씠?쒕컮 ?대┫ ??button ?좊땲硫붿씠??*/
.sidebar-btn--active .sidebar-btn__inner span:nth-child(1) {
  top: 50%;
  transform: rotate(45deg);
}
.sidebar-btn--active .sidebar-btn__inner span:nth-child(2) {
  opacity: 0;
}
.sidebar-btn--active .sidebar-btn__inner span:nth-child(3) {
  top: 50%;
  transform: rotate(-45deg);
}

/* mockup-box 踰꾪듉 */
.mockup-box {
  position: fixed;
  bottom: var(--spacing-3xl);
  left: var(--spacing-3xl);
  width: var(--size-util-btn);
  height: var(--size-util-btn);
  transition: bottom 0.2s ease-in-out, left 0.2s ease-in-out;
  z-index: 1000;
}
.mockup-box.mockup-box--on {
  bottom: var(--spacing-5xl);
  left: var(--spacing-5xl);
}
/* mockup-box__open-btn */
.mockup-box__open-btn {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  visibility: visible;
  pointer-events: all;
  background-color: var(--color-mockup-box-btn);
  opacity: 1;
}
/* ?좊땲硫붿씠???숈옉 以?鍮꾪솢?깊솕 */
/* 페이지 최초 로드 시 주목 애니메이션 (3초간) */
.mockup-box__open-btn--initial-attention {
  animation: pulseGlow 1s ease-in-out 3;
}
.mockup-box__open-btn--disabled {
  pointer-events: none;
}
/* 紐⑹뾽 紐⑥쓬 ?쒖꽦????*/
.mockup-box--on .mockup-box__open-btn {
  opacity: 1;
  background-color: var(--color-primary);
}
.mockup-box--on .mockup-box__open-btn:hover {
  opacity: 0.7;
  transform: translateY(0);
}
.mockup-box__open-btn img {
  position: absolute;
  top: 50%;
  left: 50%;
  left: calc(50% - 1px);
  transform: translate(-50%, -50%);
  width: calc(58px / 2);
  height: calc(58px / 2);
}
/* mockup-box__inner */
.mockup-box__inner {
  position: relative;
  width: 100%;
  height: 100%;
}
.mockup-box__action-btn {
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  position: absolute;
  top: 7px;
  left: 7px;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  transition: all 0.2s ease-in-out;
}
.mockup-box__action-btn img {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
/* 紐⑤컮??紐⑹뾽 踰꾪듉 */
.mockup-box__action-btn.mobile {
  background-color: #72e3ad;
  transition-delay: 0.3s;
}
.mockup-box__action-btn.mobile img {
  width: calc(28px / 2);
  height: calc(40px / 2);
}
/* ?쒕툝由?紐⑹뾽 踰꾪듉 */
.mockup-box__action-btn.tablet {
  background-color: #1da1f2;
  transition-delay: 0.15s;
}
.mockup-box__action-btn.tablet img {
  width: calc(40px / 2);
  height: calc(32px / 2);
}
/* ?リ린 踰꾪듉 */
.mockup-box__action-btn.close {
  background-color: #e4405f;
  transition-delay: 0.45s;
}
.mockup-box__action-btn.close img {
  width: calc(28px / 2);
  height: calc(28px / 2);
}
/* 紐⑹뾽 諛뺤뒪 ?대┫ ???≪뀡踰꾪듉 ?숈옉 */
.mockup-box--on .mockup-box__action-btn {
  opacity: 1;
  visibility: visible;
  pointer-events: all;
  box-shadow: var(--shadow-util-btn);
}
.mockup-box__action-btn:hover {
  animation: actionBtnHover 0.2s ease-in-out forwards;
}
/* 紐⑤컮??- 紐⑹뾽 諛뺤뒪 ?대┫ ???≪뀡踰꾪듉 ?숈옉 */
.mockup-box--on .mockup-box__action-btn.mobile{
  top: -48px;
  left: 0;
}
/* ?쒕툝由?- 紐⑹뾽 諛뺤뒪 ?대┫ ???≪뀡踰꾪듉 ?숈옉 */
.mockup-box--on .mockup-box__action-btn.tablet{
  top: -32px;
  left: 48px;
}
/* ?リ린 踰꾪듉 - 紐⑹뾽 諛뺤뒪 ?대┫ ???≪뀡踰꾪듉 ?숈옉 */
.mockup-box--on .mockup-box__action-btn.close{
  top: calc(100% - 36px);
  left: calc(100% + 18px);
}
/* ?≪뀡踰꾪듉 ?몃쾭 ?좊땲硫붿씠??*/
@keyframes actionBtnHover {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0.7;
  }
}

/* 펄스 + 글로우 애니메이션 (초기 주목용) */
@keyframes pulseGlow {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(255, 184, 77, 0);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 0 20px 8px rgba(255, 184, 77, 0.6);
  }
}
